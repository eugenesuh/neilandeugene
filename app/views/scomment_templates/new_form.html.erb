<!-- Validation failure messages -->
<% if @scomment.present? %>
  <% if @scomment.errors.any? %>
    <% @scomment.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new scomment
</h1>

<hr>

<form action="/create_scomment" method="post">
  <!-- Label and input for user_id -->
  <div class="form-group">
    <label for="user_id">
      User
    </label>

    <input type="text" id="user_id" name="user_id" class="form-control" value="<%= @scomment.try(:user_id) %>">
  </div>

  <!-- Label and input for song_id -->
  <div class="form-group">
    <label for="song_id">
      Song
    </label>

    <input type="text" id="song_id" name="song_id" class="form-control" value="<%= @scomment.try(:song_id) %>">
  </div>

  <!-- Label and input for body -->
  <div class="form-group">
    <label for="body">
      Body
    </label>

    <textarea id="body" name="body" class="form-control" rows="3"><%= @scomment.try(:body) %></textarea>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create scomment
  </button>
</form>

<hr>

<a href="/scomments">
  Go back
</a>
