<div class="page-header header-filter" data-parallax="true" style=" background-image: url('../assets/img/kit/pro/bg9.jpg'); height: 400px;">
    <div class = "container">
    <h2 class = "text-center">SONG DETAIL</h2>
    <h4 class = "description text-center">of <%= @song.title %></h4>
      </div>
</div>
<div class="main main-raised" style="background-color:#EAEAEA">
<div class = "profile-content">
  <div class = "container">
    <a href="/songs/<%= @song.id %>/edit" class="btn btn-primary btn-round text-center mt-3"><i class="material-icons">mode_edit</i> Edit Song</a>
  </div>
  <div class = "container mt-3">
    <div class = "row">
      <div class = "col-6">
<dl>
  <dt>
    Title
  </dt>
  <dd>
    <%= @song.title %>
  </dd>

  <dt>
    Artist
  </dt>
  <dd>
    <%= @song.artist %>
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%= time_ago_in_words(@song.created_at) %> ago
  </dd>

</dl>
</div>

<div class = "col-6">
  
  <p class="card-text">
    <h5 class = "title">Comment Log</h5>
      <% scomments = @song.scomments %>
      <% scomments.each do |scomment| %>
      <ul class="p-0 m-0">
        <%= scomment.body %>
        <a href="/delete_scomment/<%= scomment.id %>" class = "pull-right"> Delete </a>
      </ul>
      <% end %>
   <form action="/create_scomment" method="post">
                  <input type="hidden" name="song_id" value="<%= @song.id %>">
                  <input type="hidden" name="user_id" value="<%= current_user.id %>">

                  <!-- Label and input for body -->
                  <div class="form-group">
                    <label for="body" class="sr-only">
                      Body
                    </label>

                    <div class="input-group">
                      <input type="text" id="body" name="body" class="form-control" placeholder="Add a comment..." required>
                    </div> <!-- input-group -->
                    <div>
                      <span class="input-group-btn">
                        <button class="btn btn-warning" type="submit">
                          <i class="fa fa-fw fa-commenting-o"></i>
                          Add Comment
                        </button>
                      </span>
                      </p>
  
</div>
</div>

</div>
  <a href="/songs" class = "text-muted mb-3 h6 align-center"> Go Back to List of Songs </a>
</div>
</div>