<!-- Validation failure messages -->
<% if @slike.present? %>
  <% if @slike.errors.any? %>
    <% @slike.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new slike
</h1>

<hr>

<form action="/create_slike" method="post">
  <!-- Label and input for user_id -->
  <div class="form-group">
    <label for="user_id">
      User
    </label>

    <input type="text" id="user_id" name="user_id" class="form-control" value="<%= @slike.try(:user_id) %>">
  </div>

  <!-- Label and input for song_id -->
  <div class="form-group">
    <label for="song_id">
      Song
    </label>

    <input type="text" id="song_id" name="song_id" class="form-control" value="<%= @slike.try(:song_id) %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create slike
  </button>
</form>

<hr>

<a href="/slikes">
  Go back
</a>
