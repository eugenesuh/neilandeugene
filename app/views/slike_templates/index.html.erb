<h1>
  All slikes
</h1>

<a href="/slikes/new">
  Add a new slike
</a>

<hr>

<table class="table">
  <tr>
    <th>
      ID
    </th>

    <th>
      User
    </th>

    <th>
      Song
    </th>

    <th>
      Created at
    </th>

    <th>
      Updated at
    </th>

    <th>
    </th>
  </tr>

  <% @slikes.each do |slike| %>
  <tr>
    <td>
      <%= slike.id %>
    </td>

    <td>
      <%= slike.user_id %>
    </td>

    <td>
      <%= slike.song_id %>
    </td>

    <td>
      <%= time_ago_in_words(slike.created_at) %> ago
    </td>

    <td>
      <%= time_ago_in_words(slike.updated_at) %> ago
    </td>

    <td>
      <a href="/slikes/<%= slike.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
