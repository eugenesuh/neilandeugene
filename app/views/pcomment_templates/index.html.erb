<h1>
  All pcomments
</h1>

<a href="/pcomments/new">
  Add a new pcomment
</a>

<hr>

<table class="table">
  <tr>
    <th>
      ID
    </th>

    <th>
      User
    </th>

    <th>
      Photo
    </th>

    <th>
      Body
    </th>

    <th>
      Created at
    </th>

    <th>
      Updated at
    </th>

    <th>
    </th>
  </tr>

  <% @pcomments.each do |pcomment| %>
  <tr>
    <td>
      <%= pcomment.id %>
    </td>

    <td>
      <%= pcomment.user_id %>
    </td>

    <td>
      <%= pcomment.photo_id %>
    </td>

    <td>
      <%= pcomment.body %>
    </td>

    <td>
      <%= time_ago_in_words(pcomment.created_at) %> ago
    </td>

    <td>
      <%= time_ago_in_words(pcomment.updated_at) %> ago
    </td>

    <td>
      <a href="/pcomments/<%= pcomment.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
