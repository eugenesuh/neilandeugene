<!-- Validation failure messages -->
<% if @pcomment.errors.any? %>
  <% @pcomment.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit pcomment #<%= @pcomment.id %>
</h1>

<hr>

<form action="/update_pcomment/<%= @pcomment.id %>" method="post">
  <!-- Label and input for user_id -->
  <div class="form-group">
    <label for="user_id">
      User
    </label>

    <input type="text" id="user_id" name="user_id" class="form-control" value="<%= @pcomment.user_id %>">
  </div>

  <!-- Label and input for photo_id -->
  <div class="form-group">
    <label for="photo_id">
      Photo
    </label>

    <input type="text" id="photo_id" name="photo_id" class="form-control" value="<%= @pcomment.photo_id %>">
  </div>

  <!-- Label and input for body -->
  <div class="form-group">
    <label for="body">
      Body
    </label>

    <textarea id="body" name="body" class="form-control" rows="3"><%= @pcomment.body %></textarea>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update pcomment
  </button>
</form>

<hr>

<a href="/pcomments">
  Go back
</a>
