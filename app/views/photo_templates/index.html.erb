  <div class="page-header header-filter" data-parallax="true" style=" background-image: url('https://www.colemanconcierge.com/wp-content/uploads/2016/05/Antelope-Ghost.jpeg'); height: 400px;">
    <div class = "container">
    <h2 class = "text-center">PHOTOS</h2>
    <h4 class = "description text-center">A place to share memories</h4>
      </div>
    </div>
        <div class="main main-raised" style="background-color:#EAEAEA">
            <div class="profile-content">
                <div class="container">
                  <div class = "row">
                <a href="/photos/new" class="btn btn-primary btn-round text-center mt-3">
                <i class="material-icons">favorite</i> Add New Photo
                 </a>
            </div>
  
<div class = "container">
<div class = "row">
<% @photos.each do |photo| %>
<div class = "col-md-4">
  <div class="card card-product card-plain">
  <div class="card-header card-header-image">
  <img src="<%= photo.image %>" alt="https://static.pexels.com/photos/132037/pexels-photo-132037.jpeg">
  </div>
  <div class="card-body">
      <p class = "card-description pull-left"> <%= photo.caption %></p>
      <% id = current_user.id %>
    
      <% if photo.plikes.find_by(user_id: id) != nil %>
                
      <a href="/delete_plike/<%= photo.plikes.find_by(user_id: id).id %>" class="btn btn-link pull-right p-0">
                  <i class="fa fa-fw fa-heart"></i> <%= photo.plikes.count %>
                </a>
      <% else %>
      
                <form action="/create_plike" method="post">
                  <input type="hidden" name="photo_id" value="<%= photo.id %>">
                  <input type="hidden" name="user_id" value="<%= current_user.id %>">
                  <button class="btn btn-link pull-right p-0">
                    <i class="fa fa-fw fa-heart-o"></i>
                    <%= photo.plikes.count %>
                  </button>
                </form>
      <% end %>
   </div>
  <p class="card-description pull-left text-muted">
      <% pcomments = photo.pcomments.last(4) %>
      <% pcomments.each do |pcomment| %>
      <ul class="p-0 m-0">
        <p class = "h6"><%= pcomment.user.username %>:</p> <%= pcomment.body %>
        <a href="/delete_pcomment/<%= pcomment.id %>" class = "pull-right"> Delete </a>
      </ul>
      <% end %>
       <form action="/create_pcomment" method="post">
                  <input type="hidden" name="photo_id" value="<%= photo.id %>">
                  <input type="hidden" name="user_id" value="<%= current_user.id %>">

                  <!-- Label and input for body -->
                  <div class="form-group">
                    <label for="body" class="sr-only">
                      Body
                    </label>

                    <div class="input-group">
                      <input type="text" id="body" name="body" class="form-control" placeholder="Add a comment..." required>
                    </div> <!-- input-group -->
                    <div>
                      <span class="input-group-btn">
                        <button class="btn btn-warning" type="submit">
                          <i class="fa fa-fw fa-commenting-o"></i>
                          Add Comment
                        </button>
                      </span>
                    <a href="/photos/<%= photo.id %>" class=" h6 text-muted pull-right">
                        Show Details
                    </a>
                    </div>
                    <% if current_user.id == photo.user_id %>
                    <a href="/photos/<%= photo.id %>/edit" class="btn btn-dark btn-just-icon btn-fill btn-round btn-wd">
                        <i class="material-icons">mode_edit</i>
                    </a>
                    <a href="/delete_photo/<%= photo.id %>" class="btn btn-danger btn-just-icon btn-fill btn-round">
                        <i class="material-icons">delete</i>
                    </a>
                  <% else %>
                  <% end %>
                  </div>  <!-- form-group -->
                </form>
  </p>
  </div>
  </div>
<% end %>
</div>
</div>
</div>