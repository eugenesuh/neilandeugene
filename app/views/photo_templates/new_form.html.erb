<div class="page-header header-filter" data-parallax="true" style=" background-image: url('../assets/img/kit/pro/examples/city.jpg'); height: 400px;">
    <div class = "container">
    <h2 class = "text-center">ADD A NEW PHOTO</h2>
    <h4 class = "description text-center">Add your photos!</h4>
      </div>
    </div>
<div class="main main-raised" style="background-color:#EAEAEA">
            <div class="profile-content">
<div class = "container">
<!-- Validation failure messages -->
<% if @photo.present? %>
  <% if @photo.errors.any? %>
    <% @photo.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<hr>

<form action="/create_photo" method="post" enctype="multipart/form-data">
  <h4 class = "mb-4"> Add new photo</h2>

  <!-- Label and input for image_url -->

  <div class="fileinput fileinput-new text-center" data-provides="fileinput">
   <div class="fileinput-new thumbnail img-raised">
	<img src="https://epicattorneymarketing.com/wp-content/uploads/2016/07/Headshot-Placeholder-1.png" alt="image">
   </div>
   <div class="fileinput-preview fileinput-exists thumbnail img-raised"></div>
   <div>
	<span class="btn btn-raised btn-round btn-default btn-file">
	   <span class="fileinput-new">Select image</span>
	   <span class="fileinput-exists">Change</span>
	   <input type="file" id="image" name="image" value="<%= @photo.try(:image) %>" />
	</span>
        <a href="#pablo" class="btn btn-danger btn-round fileinput-exists" data-dismiss="fileinput">
        <i class="fa fa-times"></i> Remove</a>
   </div>
  </div>
  
  <!-- Label and input for caption -->
  <div class="form-group">
    <label for="caption">
      Caption
    </label>

    <input type="text" id="caption" name="caption" class="form-control" value="<%= @photo.try(:caption) %>" placeholder = "Add quick description to your photo">
  </div>

  <!-- hidden input for user_id -->

    <input type="hidden" id="user_id" name="user_id" class="form-control" value="<%= current_user.id %>">

  <button class="btn btn-block btn-primary">
    Create photo
  </button>
  <a href="/photos" class = "btn btn-block btn-outline-secondary text-center"> Go Back </a>
</form>

<hr>


</div>
</div>
</div>